<div class="ui grid container">
  <div class="left floated sixteen wide column">
    <%= form_for @event, url: {controllers: 'events', action: 'create'}, html: {class: "ui grid"} do |t| %>
    <div class="six wide column">
      <h1>Create New Event</h1>
      <div class="ui center aligned segment">
        <div class="field">
          <%= image_tag("square-image.png", :class => "ui centered medium image") %>
        </div>
        <div class="field">
          <div class="ui icon input">
            <%= t.file_field :photo %>
          </div>
        </div>
      </div>
    </div>
    <div class="ten wide column">
      <br><br>
      <div class="ui equal width form">
        <div class="fields">
          <div class="field">
            <%= t.label :name %>
            <%= t.text_field :name %>
          </div>
        </div>
        <div class="fields">
          <div class="field">
            <%= t.label :date %>
            <%= t.date_field :date %>
          </div>
          <div class="field">
            <%= t.label :target %>
            <%= t.number_field :target %>
          </div>
          <div class="field">
            <%= t.label :hashtag %>
            <%= t.text_field :one_liner %>
          </div>
        </div>
        <div class="fields">
          <div class="field">
            <%= t.label :location %>
            <%= t.text_field :location %>
          </div>
          <div class="field">
            <%= t.label :other_sellers_can_join %>
            <%= t.check_box :other_sellers, {}, true, false %>
          </div>
        </div>
        <div class="fields">
          <div class="field">
            <%= t.label :description %>
            <%= t.text_area :description %>
          </div>
        </div>
      </div>
    <%= t.hidden_field :user_id, :value => current_user.id %>
    <%= t.submit "Create Event", :class => "ui button" %>
  </div>
  <% end %>
</div>
</div>
