<div class="ui menu">

    <div class="header item"><%= link_to "FLEASTARTER", root_path %></div>

    <div class="ui dropdown item">
      Explore
      <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to "Events", root_path, class: "item" %>
        <%= link_to "Items", items_path, class: "item" %>
      </div>
    </div>

    <div class="ui dropdown item">
      Be a Seller
      <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to "find an event", root_path, class: "item" %>
        <%= link_to "add item", new_item_path, class: "item" %>
        <%= link_to "manage items", {:controller => 'items', :action => 'show_by_user', :id => current_user.id}, class: "item" %>
      </div>
    </div>

    <div class="ui dropdown item">
      Be an Organizer
      <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to "create event", new_event_path, class: "item" %>

        <a class="item" href="/users/<%= current_user.id %>">manage my events</a>
      </div>
    </div>

    <div class="right menu">

      <a class="item" href="/users/<%= current_user.id %>"><%= current_user.name %>'s Profile</a>

      <a class="item" href="/users/<%= current_user.id %>/edit"><i class="user icon"></i></a>


      <%= link_to "log out", destroy_user_session_path, method: :delete, data: {confirm: 'Are you sure?'}, class: "item" %>

    </div>

</div>

<script>
$(document)
.ready(function() {
  $('.ui.menu .ui.dropdown').dropdown({
    on: 'hover'
  });

  $('.ui.menu a.item')
  .on('click', function() {
    $(this)
    .addClass('active')
    .siblings()
    .removeClass('active')
    ;
  });

  $('.indicating')
  .progress({
    // percent: 50
  })
  ;
})
 ;
</script>
